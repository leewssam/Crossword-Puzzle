@using SEF_Assignment.ViewModel
@model SEF_Assignment.ViewModel.Login

@{
    ViewBag.Title = "Login";
    Layout = "_LoginLayout.cshtml";
}

<body class="loginFormStyle">
    <h2>Login</h2>
    <input type="button" class="btn backBtn" value="Back" onclick="@("window.location.href='" + @Url.Action("ChooseAction", "Login") + "'") ;">

    <div>
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-xs-1 col-lg-3"></div>
                <div class="col-xs-10 col-lg-6 formContainer form-inline">
                    <div class="row">
                        <div class="textboxContainer">
                            <label for="UserID" class="col-xs-12 col-lg-4">User ID : </label>
                            @Html.TextBoxFor(m => m.UserID, new { @class = "col-xs-12 col-lg-8 form-control", autocomplete = "off" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4"></div>
                        @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "col-xs-12 col-lg-8 errorMessage text-danger" })
                    </div>


                    <br />

                    <div class="row">
                        <div class="textboxContainer">
                            <label for="UserPassword" class="col-xs-12 col-lg-4">Password : </label>
                            @Html.PasswordFor(m => m.UserPassword, new { @class = "col-xs-12 col-lg-8 form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4"></div>
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "col-xs-12 col-lg-8 errorMessage text-danger" })
                    </div>


                    <br />
                    <div class="row">
                        <div class="col-xs-1 col-lg-3"></div>
                        <div class="col-xs-10 col-lg-6">
                            <button type="submit" class="btn btn-lg loginBtn">Login</button>
                        </div>
                        <div class="col-xs-1 col-lg-3"></div>
                    </div>

                </div>
                <div class="col-xs-1 col-lg-3"></div>
            </div>

        }
    </div>

</body>

