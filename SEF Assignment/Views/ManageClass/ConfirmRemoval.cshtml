@using SEF_Assignment.Models
@using SEF_Assignment.ViewModel
@model SEF_Assignment.ViewModel.RemoveList



@{
    ViewBag.Title = "ConfirmRemoval";
    Layout = "_ManageClassLayout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<body class="studentlistStyle">

    <div>

        @Html.BeginForm()) {
        <div class="row text-left">
            <div class="col-md-1"></div>
            <div class="col-md-8">
                <h2 class="header">Student List</h2>
            </div>
            <div class="col-md-1">
                <button class="btn backBtn" name="action" value="home">Home</button>
            </div>
            <div class="col-md-1">
                <button class="btn backBtn" name="action" value="back">Back</button>
            </div>
            <div class="col-md-2"></div>
        </div>
        }

        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-xs-1 col-lg-3"></div>
            <div class="col-xs-10 col-lg-6 topContainer form-inline">
                <div class="row">
                    <div class="col-md-1">
                        <h3 class="header"><font color="black">#</font></h3>
                    </div>
                    <div class="col-md-3">
                        <h3 class="header"><font color="black">Student ID</font></h3>
                    </div>

                    <div class="col-md-4">
                        <h3 class="header"><font color="black">Student Name</font></h3>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-1 col-lg-3"></div>
            <div class="col-xs-10 col-lg-6 formContainer">
                @{
                    int counter = (Model.ViewRemoveList.Count + 1);
                }

                @for (var i = 1; i < (counter); i++)
                {
                    <hr />
                    <div class="row">

                        <div class="col-md-1">
                            <h3 class="header"><font color="black">@i</font></h3>
                        </div>
                        <div class="col-md-3">
                            <h3 class="header"><font color="black">@Model.ViewRemoveList[i - 1].StudentID</font></h3>
                        </div>
                        <div class="col-md-4">
                            <h3 class="header"><font color="black">@Model.ViewRemoveList[i - 1].StudentName</font></h3>
                            @Html.HiddenFor(m => Model.ViewRemoveList[i - 1].StudentID)
                        </div>
                    </div>
                    <br />
                }
            </div>
        </div>



        <br />

        <div class="row text-left">
            <div class="col-md-3"></div>
        
            <div class="col-md-3">
                <button class="btn backBtn" name="action" value="back">Back</button>
            </div>
            <div class="col-md-4">
                <button class="btn backBtn" name="action" value="remove">I confirm to remove these students</>

            </div>
        </div>


    </div>
